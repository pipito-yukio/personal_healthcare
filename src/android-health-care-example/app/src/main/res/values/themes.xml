<resources>
    <!-- Base application theme. -->
    <style name="Theme.HealthCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TextViw background drawable reference -->
        <item name="inpTextFrameBgDrawable">@drawable/input_textview_frame</item>
        <item name="inpTextFrameFgColor">@color/purple_700</item>
        <item name="titleFrameBgDrawable">@drawable/title_textview_frame</item>
        <item name="titleFrameFgColor">@color/black</item>
        <item name="editBorderDrawable">@drawable/edittext_border</item>
        <!-- Warning TextView on Light -->
        <item name="warningBgDrawable">@drawable/title_textview_frame</item>
        <!-- @android:color/red is private -->
        <item name="warningFgColor">@color/solid_red</item>
        <!-- Customize your theme here. -->
        <!-- Custom ActionBarStyle -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/HealthcareActionBar</item>
    </style>
    <!-- Default -->
    <style name="Theme.HealthCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HealthCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HealthCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom ActionBarStyle -->
    <!-- https://github.com/codepath/android-actionbar-style-demo
     ActionBarStylesDemo
    -->
    <!-- Custom TitleTextStyle: textSize(phone=20sp-3sp/Tablet=20sp+1sp)  -->
    <style name="HealthcareActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>
    <!-- Custom SubTitleTextStyle: textSize(phone:16sp -3sp/Tablet=16+1sp) -->
    <style name="HealthcareActionBar.SubtitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/action_bar_subtitle_text_size</item>
    </style>
    <!-- Widget.AppCompat.Light.ActionBar.Solid.Inverse ※変わらない-->
    <!-- ActionBarの背景が赤になる: <item name="background">@color/solid_red</item> -->
    <style name="HealthcareActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/HealthcareActionBar.TitleTextStyle</item>
        <item name="subtitleTextColor">@style/HealthcareActionBar.SubtitleTextStyle</item>
    </style>
</resources>