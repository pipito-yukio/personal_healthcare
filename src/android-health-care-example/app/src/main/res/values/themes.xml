<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthCare" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TextViw background drawable reference -->
        <item name="inpTextFrameBgDrawable">@drawable/input_textview_frame</item>
        <item name="inpTextFrameFgColor">@color/purple_700</item>
        <item name="titleFrameBgDrawable">@drawable/title_textview_frame</item>
        <item name="titleFrameFgColor">@color/black</item>
        <item name="editBorderDrawable">@drawable/edittext_border</item>
        <!-- Warning TextView on Light -->
        <item name="warningBgDrawable">@drawable/title_textview_frame</item>
        <!-- @android:color/red is private -->
        <item name="warningFgColor">@color/solid_red</item>
    </style>
</resources>